.content-720 
    .info-section
        header.info-section__head
            h2.info-section__title DreamVolt Everyone 
            p.info-section__description Dreamvolt is a goals and targets setting platform, that provides you with pathways to success.

        .info-section__body(
            style=`background-image: url(${baseUrl}asset/image/bg-4-1.jpg)`
        )
            img(
                src=`${baseUrl}asset/image/dreamwall1.png` width="154"
            )
            img.info-section__store-link(
                src=`${baseUrl}asset/image/btn-apple.png`
                width="151"
            )
        .info-section__footer
            ul.item__wrapper  
                li.item 
                    .item__icon 
                    .item__title Engages
                    .item__description Dreamvolt engages, focuses, motivates and empowers students to take responsibility for their own development
                li.item 
                    .item__icon 
                    .item__title Achieve
                    .item__description Dreamvolt allows students to achieve regular wins, increase confidence and create good habits    
                li.item 
                    .item__icon 
                    .item__title Plan
                    .item__description Dreamvolt allows students to look ahead and plan a course and career pathway
                li.item 
                    .item__icon 
                    .item__title Student Driven
                    .item__description Dreamvolt places each student at the centre of their goals and targets in school and beyond

